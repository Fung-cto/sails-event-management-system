<div class="columns is-multiline is-centered" style="margin: 1% ">
  <% var count = 0; var flag = false; 
  events.reverse().forEach( function(event) {
    if(flag)return;
     if (event.HighlightEvent) { count++ %>  
    <div class="column is-half" style="margin: -0.5%;" >
     
    
      <div class="card is-horizontal columns"  >
      
        <div class="card-image column">
          <figure class="image is-4by3">
            <img src="<%= event.ImageURL %>" alt="Image">
          </figure>
        </div>
        <div class="card-content column" style="font-weight: bold;">
          <header class="card-header" style="padding: 4%;">
            <%= event.EventName %>
          </header>

          <div class="content" style="padding: 5%;  font-weight: lighter ;" >
            <a href="/event/details/<%= event.id %>"">
              <%= event.ShortDescription %>
            </a>
          </div>
        </div>
      </div>
    

  </div>
<% if(count === 4){
flag=true;
}
 }}); %>

</div>